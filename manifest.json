{
    "manifest_version": 3,
    "name": "Aero",
    "version": "1.0",
    "permissions": [
      "identity"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_popup": "chatroom.html",
      "default_icon": {
        "16": "images/Aero-Circle.png"
      }
